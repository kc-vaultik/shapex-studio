# ShapeX Configuration

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token (optional)
TELEGRAM_USER_ID=your_telegram_user_id (optional)

# Product Hunt API (Optional - get from https://api.producthunt.com/v2/oauth/applications)
PRODUCT_HUNT_API_KEY=your_product_hunt_key (optional)

# Stripe Payment Processing (Get from https://dashboard.stripe.com/test/apikeys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_INDIE=price_indie_tier_id_from_stripe
STRIPE_PRICE_PRO=price_pro_tier_id_from_stripe
STRIPE_PRICE_VC=price_vc_tier_id_from_stripe

# Scanning Schedule
DAILY_SCAN_TIME=09:00
WEEKLY_REPORT_DAY=friday
WEEKLY_REPORT_TIME=17:00

# Analysis Settings
MIN_FEASIBILITY_SCORE=6.0
MIN_MONETIZATION_SCORE=7.0
IDEAS_PER_SCAN=10
MAX_IDEAS_PER_CHANNEL=5

# Database
DATABASE_URL=sqlite:///./data/shapex.db

# Server Settings
BACKEND_PORT=8000
FRONTEND_PORT=3001
LOG_LEVEL=INFO

# Feature Flags
ENABLE_TELEGRAM=true
ENABLE_SCHEDULED_SCANS=true
ENABLE_YC_SCRAPER=true
ENABLE_A16Z_SCRAPER=true
ENABLE_PRODUCT_HUNT=true
ENABLE_GOOGLE_TRENDS=true
